<% if @is_turbo_frame %>
  <%= turbo_frame_tag "modal" do %>
    <div data-controller="modal">
      <%= render "modal" %>
    </div>
  <% end %>
<% else %>
  <div class="container mx-auto p-6 bg-gray-50 min-h-screen" dir="rtl">
    <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
      <%# Header Section %>
      <div class="bg-gradient-to-r from-blue-600 to-blue-800 p-6">
        <div class="flex justify-between items-center">
          <h1 class="text-3xl font-bold text-white">
            <%= @real_sale.sale_id %> - פרטי מכירה
          </h1>
          <%= link_to dashboard_real_sales_path, 
              class: "px-4 py-2 bg-white text-blue-700 rounded-lg hover:bg-blue-50 transition duration-150 ease-in-out flex items-center gap-2" do %>
            <span>חזרה ללוח בקרה</span>
          <% end %>
        </div>
      </div>

      <%# Content Section %>
      <div class="p-6">
        <dl class="space-y-6">
          <% @real_sale.attributes.each do |attr_name, value| %>
            <% if value.present? %>
              <div class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition duration-150 ease-in-out">
                <dt class="text-sm font-semibold text-gray-600 uppercase tracking-wider mb-1">
                  <%= attr_name.titleize %>
                </dt>
                <dd class="text-base text-gray-900">
                  <% if attr_name == 'cpa_chat' && value.present? %>
                    <div class="overflow-x-auto shadow-sm rounded-lg border-2 border-gray-300">
                      <table class="min-w-full divide-y-2 divide-gray-300 border-collapse">
                        <thead class="bg-gray-50">
                          <tr class="border-b-2 border-gray-300">
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-x-2 border-gray-300">תאריך ושעה</th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-x-2 border-gray-300">שם</th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-x-2 border-gray-300">הודעה</th>
                          </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-300">
                          <% messages = value.scan(/(\S+)\s+(\d{1,2}\.\d{1,2}\.\d{4},\s+\d{1,2}:\d{2}:\d{2}):\s+(.+?)(?=\s*\S+\s+\d{1,2}\.\d{1,2}\.\d{4}|$)/m) %>
                          <% messages.each do |name, datetime, content| %>
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right border-x-2 border-gray-300">
                                <%= datetime %>
                              </td>
                              <td class="px-6 py-4 text-sm text-gray-900 text-right border-x-2 border-gray-300">
                                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-medium">
                                  <%= name %>
                                </span>
                              </td>
                              <td class="px-6 py-4 text-sm text-gray-900 text-right border-x-2 border-gray-300">
                                <%= content.strip %>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  <% else %>
                    <span class="font-medium"><%= value %></span>
                  <% end %>
                </dd>
              </div>
            <% end %>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
<% end %>