<!DOCTYPE html>
<html>
<head>
   <%= csrf_meta_tags %>
   <%= csp_meta_tag %>
  <title>איסוף לידים</title>
  <style>
    body {
      background-color: #2196F3; /* Modern blue background */
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      font-family: Arial, sans-serif;
    }
    .container {
      width: 95%;
      height: 95%;
      display: flex;
      flex-direction: column;
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      box-sizing: border-box;
    }
   .logo {
      align-self: flex-start;
      width: 180px; /* Adjusted size */
      height: auto;
      margin-bottom: 20px;
    }
    .text-box {
      width: 100%;
      height: 40%;
      resize: none;
      border: 1px solid #e0e0e0;
      padding: 10px;
      font-size: 16px;
      border-radius: 4px;
      margin-bottom: 20px;
      box-sizing: border-box;
    }
    .button-container {
      display: flex;
      justify-content: center;
      margin: 20px 0;
    }
    #decode-button {
      padding: 15px 30px;
      font-size: 18px;
      background-color: #FF4081;
      color: white;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    #decode-button:hover {
      background-color: #E91E63;
    }
    #save-button {
      margin-top: 10px;
      padding: 10px 20px;
      font-size: 16px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    #save-button:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <div class="container">
    <%= image_tag 'logo.jpeg', alt: 'מגיע לי החזר', class: 'logo' %>    
    <textarea id="encrypted-input" class="text-box" placeholder="הכנס טקסט של התוסף"></textarea>
    <div class="button-container">
      <button id="decode-button">חשיפה</button>
    </div>
    <textarea id="decoded-output" class="text-box" placeholder="הלידים יופיעו כאן לאחר לחיצה על הכפתור" readonly></textarea>
    <div class="button-container">
      <button id="save-button">שמירה</button>
    </div>
  </div>
  <script>
    document.getElementById('decode-button').addEventListener('click', function() {
      const encryptedContent = document.getElementById('encrypted-input').value;

      fetch('/field_data/decode', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify({ encrypted_content: encryptedContent })
      })
      .then(response => response.json())
      .then(data => {
        if (data.decoded_content) {
          document.getElementById('decoded-output').value = data.decoded_content;
        } else if (data.error) {
          alert('Error decoding content: ' + data.error);
        }
      })
      .catch(error => console.error('Error:', error));
    });

    document.getElementById('save-button').addEventListener('click', function() {
      const decodedContent = document.getElementById('decoded-output').value;
      if (!decodedContent) {
        alert('אין תוכן לשמירה');
        return;
      }

      // Add BOM for UTF-8
      const bom = new Uint8Array([0xEF, 0xBB, 0xBF]);
      const content = new Blob([bom, decodedContent], { type: 'text/csv;charset=utf-8;' });
      
      const link = document.createElement('a');
      link.href = URL.createObjectURL(content);
      link.download = 'decoded_data.csv';
      link.click();
      URL.revokeObjectURL(link.href);
    });
  </script>
</body>
</html>